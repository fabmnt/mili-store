---
const totalSkeletons = 8;
---

<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
  {
    Array.from({ length: totalSkeletons }).map(() => (
      <div class="block h-full">
        <article class="flex flex-col gap-4 w-full bg-white rounded border border-[#E5E5E5] h-full">
          <div class="w-full h-[264px] max-h-[264px] shimmer-effect"></div>
          <div class="p-4">
            <h2 class="font-medium shimmer-effect-text">Product name</h2>
            <p class="shimmer-effect-text mt-1">$0.00</p>
          </div>
        </article>
      </div>
    ))
  }
</div>
<style>
  .shimmer-effect,
  .shimmer-effect-text {
    position: relative;
    overflow: hidden;
    background: #f0f0f0;
  }

  .shimmer-effect-text {
    height: 1em;
    width: 70%;
    border-radius: 4px;
    color: transparent;
  }

  .shimmer-effect::after,
  .shimmer-effect-text::after {
    content: "";
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background: linear-gradient(
      90deg,
      rgba(255, 255, 255, 0) 0%,
      rgba(255, 255, 255, 0.6) 50%,
      rgba(255, 255, 255, 0) 100%
    );
    transform: translateX(-100%);
    animation: shimmer 1.5s infinite;
  }

  @keyframes shimmer {
    100% {
      transform: translateX(100%);
    }
  }
</style> 